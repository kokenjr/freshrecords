console.log("page: <%= params[:page] %>");
<% if params[:page] %>
  $('.record').append('<%= j render :partial => 'records' %>');
  <% if @records.next_page %>
    $('.pagination').replaceWith('<%= j will_paginate @records %>');
  <% else %>
    $('.pagination').remove();
  <% end %>
  <% sleep 1 %>
<% else %>
  $(".record").html("<%= j render :partial => 'records' %>");
  $('.pagination').html('<%= j will_paginate @records %>');
<% end %>
