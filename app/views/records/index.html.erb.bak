<h1>Records</h1>

<form method="get">
  <%= select_tag("date", options_for_select(["april", "may"])) %>
  <input type="submit" value="Filter" />
</form>

<div id='records'>
  <div class='page'>
    <%= render :partial => 'records' %>
  </div>
</div>

<script type="text/javascript">
(function() {
  var page = 1,
      loading = false;

  function nearBottomOfPage() {
    return $(window).scrollTop() > $(document).height() - $(window).height() - 200;
  }

  $(window).scroll(function(){
    if (loading) {
      return;
    }

    if(nearBottomOfPage()) {
      loading=true;
      page++;
      $.ajax({
        url: '/records?page=' + page,
        type: 'get',
        dataType: 'script',
        success: function() {
          $(window).sausage('draw');
          loading=false;
        }
      });
    }
  });

  $(window).sausage();
}());
</script>
