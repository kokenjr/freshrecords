<h1>Records</h1>

<form method="get">
  <%= select_tag("date", options_for_select(["april", "may"])) %>
  <input type="submit" value="Filter" />
</form>

<% @records.each do |record| %>
  <% if record.image_url %>
    <td> <%= link_to image_tag(record.image_url, :size => "300x300"), record.prod_url%> </td>
  <% else %>
    <td> <%= link_to image_tag("/images/no-cover.jpg", :size => "300x300"), record.prod_url%> </td>
  <% end %>
<% end %>
